{
  "compilerOptions": {
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "rootDir": "src",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom",
      "webworker",
      "es2016.array.include",
      "es2017",
      "es7"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
